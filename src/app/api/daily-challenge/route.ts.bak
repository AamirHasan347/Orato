import { createRouteHandlerClient } from '@supabase/auth-helpers-nextjs';
import { cookies } from 'next/headers';
import { NextResponse } from 'next/server';

export async function GET() {
  try {
    const supabase = createRouteHandlerClient({ cookies });

    // Check authentication
    const {
      data: { user },
      error: authError,
    } = await supabase.auth.getUser();

    if (authError || !user) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 });
    }

    // Get today's date in YYYY-MM-DD format (UTC)
    const today = new Date().toISOString().split('T')[0];

    // Fetch today's challenge
    const { data: challenge, error: challengeError } = await supabase
      .from('daily_challenges')
      .select('*')
      .eq('date', today)
      .single();

    if (challengeError) {
      console.error('Error fetching daily challenge:', challengeError);
      return NextResponse.json(
        { error: 'Could not fetch daily challenge', details: challengeError.message },
        { status: 500 }
      );
    }

    if (!challenge) {
      return NextResponse.json(
        { error: 'No challenge available for today' },
        { status: 404 }
      );
    }

    // Check if user has already completed today's challenge
    const { data: attempt } = await supabase
      .from('challenge_attempts')
      .select('*')
      .eq('user_id', user.id)
      .eq('challenge_id', challenge.id)
      .single();

    // Get user's current streak
    const { data: streak } = await supabase
      .from('user_streaks')
      .select('*')
      .eq('user_id', user.id)
      .single();

    return NextResponse.json({
      ok: true,
      challenge: {
        id: challenge.id,
        prompt: challenge.prompt,
        difficulty: challenge.difficulty,
        date: challenge.date,
      },
      completed: !!attempt,
      attempt: attempt || null,
      streak: streak || {
        current_streak: 0,
        longest_streak: 0,
        total_challenges_completed: 0,
      },
    });
  } catch (error) {
    console.error('Unexpected error in daily-challenge API:', error);
    return NextResponse.json(
      { error: 'Internal server error', details: error instanceof Error ? error.message : 'Unknown error' },
      { status: 500 }
    );
  }
}
